{# templates/tarea/editar.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Editar tarea{% endblock %}

{% block body %}
<h1>Editar tarea </h1>

{% include 'comunes/_mensajes.html.twig' %}

<form method="POST" action="{{ path('app_editar_tarea', {id: tarea.id}) }}">
    <div class="form-group">
        <label for="descripcion">Descripci√≥n</label>
        <input 
            type="text" 
            class="form-control" 
            id="descripcion" 
            name="descripcion" 
            value="{{ tarea.descripcion }}" 
            required
        >
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
